// Oxiel Contreras
#include <iostream>
using namespace std;

// Función que calcula el término x de la serie de Fibonacci.
int calcularFibonacci(int x);

int main() {
    int n;

    // Solicitar al usuario el número de términos de la serie de Fibonacci que desea calcular.
    cout << "Número de términos de la serie de Fibonacci a calcular: ";
    cin >> n;

    cout << "Serie de Fibonacci hasta el término " << n << ":" << endl;

    // Imprimir los primeros n términos de la serie de Fibonacci.
    for (int i = 0; i < n; i++) {
        cout << calcularFibonacci(i) << "|";
    }
    cout << endl;  // Añadir salto de línea al final para mejorar la presentación.

    return 0;
}

// Función recursiva para calcular la serie de Fibonacci.
int calcularFibonacci(int x) {
    if (x <= 1)
        return x;
    else
        return calcularFibonacci(x - 1) + calcularFibonacci(x - 2);
}
